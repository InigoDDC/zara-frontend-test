{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "env": {
    "jest": true,
    "node": true,
    "es6": true,
    "browser": true
  },
  "rules": {
    "no-use-before-define": ["error", { "functions": false }]
  }
}
